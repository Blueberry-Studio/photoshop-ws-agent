{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "CommonJS",
    "target": "ES2019",
    "lib": ["ES2019", "DOM"],

    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src", "manifest.json"]
}